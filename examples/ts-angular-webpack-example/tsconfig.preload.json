		"rootDir": "./src/preload",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"declaration": false,
		"sourceMap": true,
		"lib": ["ES2022", "DOM"]
	},
	"include": ["src/preload/**/*"]
}

